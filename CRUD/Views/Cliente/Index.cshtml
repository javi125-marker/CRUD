
<!--Obtenemos el modelo-->
@model List<CRUD.Models.ViewModels.ListClienteViewModel>
@{
    ViewBag.Title = "Datos de Clientes";
}

<h2>@ViewBag.Title</h2>

<div class="row">

    <div class="col-md-12">

        <!--Contenedor para enviarlo a otra pagina -->
        <div class="row" style="text-align:right; padding:10px;">
            <a href="~/Cliente/Nuevo" class="btn btn-primary">Nuevo</a>
        </div>

        <table class="table table-bordered table-hover">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Correo</th>

            </tr>

            <!-- Sintaxis Razor, recorre todos los datos del Model y los imprime-->
            @foreach(var oElemento in Model)
            {
                   <tr>
                       <td>@oElemento.id_cli</td>
                       <td>@oElemento.nombre_cli</td>
                       <td>@oElemento.correo_cli</td>
                   </tr>

            }
        </table>
    </div>

</div>



